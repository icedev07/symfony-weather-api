{% extends 'base.html.twig' %}

{% block title %}Погода у місті {{ weather.city }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% if error is defined %}
            <div class="alert alert-danger">
                Помилка: {{ error }}
            </div>
        {% else %}
            <div class="weather-info">
                <h2>Поточна погода в {{ weather.city }}, {{ weather.country }}:</h2>
                
                <div class="weather-details mt-4">
                    <p><strong>Температура:</strong> {{ weather.temperature }}°C</p>
                    <p><strong>Стан:</strong> {{ weather.condition }}</p>
                    <p><strong>Вологість:</strong> {{ weather.humidity }}%</p>
                    <p><strong>Швидкість вітру:</strong> {{ weather.wind_speed }} км/год</p>
                    <p><strong>Останнє оновлення:</strong> {{ weather.last_updated }}</p>
                </div>
            </div>

            <a href="{{ path('weather_form') }}" class="btn btn-primary mt-3">Перевірити інше місто</a>
        {% endif %}
    </div>
{% endblock %} 